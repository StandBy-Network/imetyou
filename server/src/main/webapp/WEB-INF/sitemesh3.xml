<sitemesh>
	<mapping path="/*" decorator="/WEB-INF/layout/mobile/mobile.jsp" />
	<mapping path="/login.html" decorator="/WEB-INF/layout/mobile/mobile.jsp" />
	<mapping path="/admin/login.html" decorator="/WEB-INF/layout/admin/adminLogin.jsp" />
	<mapping path="/admin/*" decorator="/WEB-INF/layout/admin/admin.jsp" />
